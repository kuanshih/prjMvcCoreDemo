
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>輸入使用者帳號與密碼</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="txtfId" value="@ViewBag.FID" />
        <div class="form-group">
            使用者帳號(註冊時輸入的Email)
            <div class="col-md-10">
                @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "from-control" } })
            </div>
        </div>
        <div class="form-group">
            密碼
            <div class="col-md-10">
                @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "from-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="登入" class="btn btn-secondary" />
                <br />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("忘記密碼", "List", "Shopping", null, new { @class = "btn btn-light" })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
